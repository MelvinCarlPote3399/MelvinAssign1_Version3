<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentActivity">

    <ImageButton
        android:id="@+id/RentButton"
        android:layout_width="90dp"
        android:layout_height="82dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <RadioGroup
        android:layout_width="186dp"
        android:layout_height="108dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="101dp"
        android:id="@+id/HomeTypeGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/Apartment"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="@string/apartment" />

        <RadioButton
            android:id="@+id/Detached_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detached_home" />
    </RadioGroup>

    <TextView
        android:id="@+id/RentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="105dp"
        android:text="@string/choose_your_desired_home_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="199dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rent_page_logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="91dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/apartment_rent_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>